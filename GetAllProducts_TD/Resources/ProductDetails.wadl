<application xmlns:soa="http://www.oracle.com/soa/rest" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tns="http://www.mozabank.org/MSB/TDProducts" xmlns="http://wadl.dev.java.net/2009/02">
   <doc title="ProductDetails">RestReference</doc>
   <grammars>
      <xsd:schema>
            <xsd:import namespace="http://www.mozabank.org/MSB/TDProducts" schemaLocation="../Schema/GetProductTD_MSB.xsd"/>
        </xsd:schema>
   </grammars>
   <resources>
      <resource path="/byId">
         <method name="GET" soa:wsdlOperation="ProductDetails">
            <request soa:paramElement="pns:Request" xmlns:pns="http://www.mozabank.org/MSB/TDProducts">
               <param name="id" style="query" soa:expression="$msg.request/tns:id" type="xsd:integer"/>
            </request>
            <response status="200">
               <representation mediaType="application/xml" element="cns:Response" xmlns:cns="http://www.mozabank.org/MSB/TDProducts"/>
               <representation mediaType="application/json" element="cns:Response" xmlns:cns="http://www.mozabank.org/MSB/TDProducts"/>
            </response>
         </method>
      </resource>
   </resources>
</application>